{
  "name": "topsignal",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "concurrently": "^9.0.0"
  },
  "scripts": {
    "dev": "concurrently -n BACKEND,FRONTEND \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && .venv\\\\Scripts\\\\python.exe -m uvicorn app.main:app --reload --port 8000",
    "dev:frontend": "npm --prefix frontend run dev",
    "stop": "powershell -ExecutionPolicy Bypass -File stop.ps1"
  }
}
